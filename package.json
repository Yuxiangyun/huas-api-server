{
  "name": "huas-schedule-bun",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cheerio": "^1.0.0",
    "@types/node": "^24.10.2",
    "bun-types": "^1.3.4"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "test": "bun test",
    "test:unit": "bun test src/test/unit/",
    "test:integration": "bun test src/test/integration/",
    "test:e2e": "bun test src/test/e2e/",
    "test:security": "bun test src/test/security/",
    "test:performance": "bun test src/test/performance/",
    "test:coverage": "bun test --coverage",
    "test:full": "bun src/test/full_flow.test.ts",
    "build": "bun build src/server.ts --target=bun --outdir=./dist",
    "lint": "bunx tsc --noEmit",
    "db:backup": "./scripts/db.sh backup",
    "db:clean": "./scripts/db.sh clean",
    "db:stats": "./scripts/db.sh stats",
    "db:vacuum": "./scripts/db.sh vacuum"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/tough-cookie": "^4.0.5",
    "@types/uuid": "^11.0.0",
    "cheerio": "^1.1.2",
    "hono": "^4.10.7",
    "tough-cookie": "^6.0.0",
    "uuid": "^13.0.0"
  }
}
