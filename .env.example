# 应用配置示例文件

# ========== 服务器配置 ==========
PORT=3000
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
NODE_ENV=development

# ========== 数据库配置 ==========
DB_PATH=huas.sqlite

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# ========== 安全配置 ==========
LOGIN_RATE_LIMIT=10
CAPTCHA_RATE_LIMIT=20
API_RATE_LIMIT=60